---
import { SITE_URL } from "@/data/config";
import type { HeadTags } from "@/utils/types/HeadTags";
import { AstroFont } from "astro-font";
import { SEO } from "astro-seo";

type Props = HeadTags;

const { title, description, noindex, og } = Astro.props;

const DEFAULT_TITLE_PAGE = "Daniel Miranda Barcelona AKA Excal1bur - Cybersecurity & Pentester Portfolio";
const DEFAULT_DESCRIPTION_PAGE =
  "Portfolio of Daniel Miranda Barcelona, offensive security enthusiast and aspiring pentester. Exploring vulnerabilities, CTF challenges, and cybersecurity tools. Currently preparing for OSCP certification.";
const DEFAULT_URL_SITE = SITE_URL;

const openGraph = {
  title: title || og?.title || DEFAULT_TITLE_PAGE,
  type: og?.type || "website",
  image: og?.image || "/opengraph-image.jpg",
  alt: og?.alt || "Daniel Miranda Barcelona portfolio image",
  url: DEFAULT_URL_SITE,
  description: og?.description || DEFAULT_DESCRIPTION_PAGE,
};

// JSON-LD Schema for Person & Website
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Daniel Miranda Barcelona",
  "alternateName": "Excal1bur",
  "url": DEFAULT_URL_SITE,
  "sameAs": [
    "https://www.linkedin.com/in/daniel-miranda-barcelona/",
    "https://github.com/ex-cal1bur"
  ],
  "jobTitle": "Cybersecurity Enthusiast and Pentester",
  "description": DEFAULT_DESCRIPTION_PAGE,
  "image": openGraph.image,
};
---

<head>
  <SEO
    charset="UTF-8"
    title={title || DEFAULT_TITLE_PAGE}
    description={description || DEFAULT_DESCRIPTION_PAGE}
    noindex={noindex || false}
    keywords="Daniel Miranda, Excal1bur, cybersecurity, pentesting, OSCP, ethical hacking, CTF, seguridad informática, portfolio, hacking ético, pentester junior"
    canonical={DEFAULT_URL_SITE}
    openGraph={{
      basic: {
        title: openGraph.title,
        type: openGraph.type,
        image: openGraph.image,
        url: openGraph.url,
        description: openGraph.description,
      },
      image: {
        alt: openGraph.alt,
      },
    }}
    twitter={{
      creator: "@Excal1bur",
      site: "@Excal1bur",
      cardType: "summary_large_image",
    }}
    extend={{
      link: [
        { rel: "icon", href: "/favicon.svg" },
        { rel: "sitemap", href: "/sitemap.xml" },
        { rel: "alternate", href: DEFAULT_URL_SITE, hreflang: "es" }, // para indicar idioma
      ],
      meta: [
        { name: "viewport", content: "width=device-width, initial-scale=1" },
        { name: "generator", content: Astro.generator },
        { name: "keywords", content: "Daniel Miranda, Excal1bur, cybersecurity, pentesting, OSCP, ethical hacking, CTF, seguridad informática, portfolio, hacking ético, pentester junior" },
        { name: "twitter:image", content: openGraph.image },
        { name: "twitter:title", content: openGraph.title },
        { name: "twitter:description", content: openGraph.description },
        { name: "twitter:site", content: "@Excal1bur" },
        { name: "robots", content: noindex ? "noindex, nofollow" : "index, follow" },
      ],
    }}
  />
  <AstroFont
    config={[
      {
        src: [],
        preload: false,
        display: "swap",
        selector: "html",
        name: "Open Sans",
        fallback: "sans-serif",
        cssVariable: "font-open-sans",
        googleFontsURL:
          "https://fonts.googleapis.com/css2?family=Open+Sans&display=swap",
      },
    ]}
  />

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" dangerouslySetInnerHTML={{ __html: JSON.stringify(jsonLd) }} />
</head>
